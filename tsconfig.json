{
  "include": [
    "src"
  ],
  "exclude": [
    "test"
  ],
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "es6",
    "lib": [
      "esnext",
      "dom"
    ],
    "allowJs": true,
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "outDir": "dist"
  }
}
